@page
@model PyzaFinder.Pages.EditModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Styles {
    <link rel="stylesheet" href="~/css/Create.css" />
}
<br />
<h2 class="text-info">Edit restaurant</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <input type="hidden" asp-for="DumplingRestaurant.IdRestaurant" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.Name" class="form-control" />
            </div>
            <span asp-validation-for="DumplingRestaurant.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.Address"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.Address" class="form-control" />
            </div>
            <span asp-validation-for="DumplingRestaurant.Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="DumplingRestaurant.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Confirm" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Return</a>
            </div>
        </div>
    </form>
</div>

@{
                <partial name="_ValidationSCriptsPartial" />
}