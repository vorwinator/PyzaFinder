@page
@model PyzaFinder.Pages.CreateModel
<br />
<h2 class="text-info">Add new dumpling restaurant</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.Name" class="form-control" />
            </div>
            <span asp-validation-for="DumplingRestaurant.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.Address"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.Address" class="form-control" />
            </div>
            <span asp-validation-for="DumplingRestaurant.Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DumplingRestaurant.PhoneNumber"></label>
            </div>
            <div class="col-6">
                <input asp-for="DumplingRestaurant.PhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" valuse="Add" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="Index" class="btn btn-success form-control">Return</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationSCriptsPartial" />
}