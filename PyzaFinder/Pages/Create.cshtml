@page
@model PyzaFinder.Pages.CreateModel
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@section Styles {
    <link rel="stylesheet" href="~/css/Create.css" />
}
<br />
<h2 style="font-size:50px; text-align:center; padding-left:30px;">Add new restaurant</h2>
<br />

<div id="form">
    <form method="post">
        <div class="form2">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div>
                    <label asp-for="DumplingRestaurant.Name"></label>
                    <input asp-for="DumplingRestaurant.Name" class="form-control" />
                </div>
                <span asp-validation-for="DumplingRestaurant.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="DumplingRestaurant.Address"></label>
                    <input asp-for="DumplingRestaurant.Address" class="form-control" />
                </div>
                <span asp-validation-for="DumplingRestaurant.Address" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="DumplingRestaurant.PhoneNumber"></label>
                    <input asp-for="DumplingRestaurant.PhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="DumplingRestaurant.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div>
                    <label asp-for="DumplingRestaurant.Opis"></label>
                    <input asp-for="DumplingRestaurant.Opis" class="form-control" />
                </div>
                <span asp-validation-for="DumplingRestaurant.Opis" class="text-danger"></span>
            </div>
            
        </div>
        <div class="form2">
            <h3>Schedule</h3>
            
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <a style="background-color: white; -webkit-box-shadow: 0px 0px 5px 1px rgba(0,0,0,0.3); box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.3); border: none; color: black; padding: 16px 16px; text-align: center; text-decoration: none; display: inline-block; font-size: 26px; cursor: pointer; border-radius: 23px; margin-left: 1px; margin-right: 15px; margin-bottom: 8px; margin-top: 8px; border: 1px solid white; width: 200px; height: 50px; padding-top: 6px;" asp-page="Index">
                    Return
                </a>
            </div>
            <div class="col-3">
                <input type="submit" value="Add" class="button" />
            </div>
        </div>
    </form>
</div>
<div id="pyza" style="height:150px;">
    <img src="~/img/pyzunia.png">
</div>
@{
                <partial name="_ValidationScriptsPartial" /> }